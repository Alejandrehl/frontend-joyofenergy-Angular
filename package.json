{
  "name": "angular-frontend-developer-joyofenergy",
  "version": "0.0.0",
  "description": "Modern Angular 14 energy monitoring dashboard with real-time charts, built using Domain-Driven Design (DDD) principles",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alejandrehl/frontend-joyofenergy-Angular.git"
  },
  "homepage": "https://alejandrehl.github.io/frontend-joyofenergy-Angular",
  "keywords": [
    "angular",
    "typescript",
    "domain-driven-design",
    "ddd",
    "energy-monitoring",
    "dashboard",
    "chartjs",
    "responsive-design",
    "testing",
    "jasmine",
    "karma",
    "eslint",
    "prettier",
    "husky",
    "github-actions",
    "ci-cd",
    "scss",
    "basscss",
    "mock-data",
    "clean-architecture",
    "solid-principles"
  ],
  "author": "Alejandrehl",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\"",
    "prepare": "husky install"
  },
  "private": true,
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/cdk": "^14.0.1",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "chart.js": "^3.2.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.1",
    "@angular-eslint/builder": "^14.0.0",
    "@angular-eslint/eslint-plugin": "^14.0.0",
    "@angular-eslint/eslint-plugin-template": "^14.0.0",
    "@angular-eslint/template-parser": "^14.0.0",
    "@angular/cli": "^14.2.13",
    "@angular/compiler-cli": "^14.0.0",
    "@types/chart.js": "^2.9.37",
    "@types/jasmine": "~4.0.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.3",
    "jasmine-core": "~4.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "~4.7.2"
  }
}
